<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
		<title>{{user.login}} @ GitHub</title>
		<link rel="stylesheet" href="style.css?v=3" media="screen" />
	</head>
	<body>
    <header>
      <h1>
        <a href="{{ user.html_url }}">
        <span class="fade">github.com/</span>{{ user.login }}</a> is
      <a href="{{ user.blog }}">{{ user.name }}</a>
      </h1>
      <ul>
        <li>Following: <a href="{{ user.html_url }}?tab=following">{{ user.following }}</a></li>
        <li>Followers: <a href="{{ user.html_url }}?tab=followers">{{ user.followers }}</a></li>
        <li>Public Repositories: <a href="{{ user.html_url }}?tab=repositories">{{ user.public_repos }}</a></li>
      </ul>
    </header>

    <section>
      <div class="container">
        {% for repo in repos %}
        <div class="repo">
          <h3>
            <a href="{{ repo.html_url }}">{{ repo.name }}</a>
            {% if repo.archived %}
            <svg class="icon" viewBox="0 0 24 24" width="24" height="24"><title>Archived</title><use xlink:href="#archived-icon"></use></svg>
            {% endif %}
            {% if repo.fork %}
            <svg class="icon" viewBox="0 0 24 24" width="24" height="24"><title>Forked</title><use xlink:href="#forked-icon"></use></svg>
            {% endif %}
          </h3>
          <p>{{ repo.description }}</p>
          <p>{% if repo.homepage %}<a href="{{ repo.homepage }}">{{ repo.homepage }}</a>{% endif %}</p>
          <ul>
            <li>Forks: <a href="{{ repo.html_url }}/forks">{{ repo.forks }}</a></li>
            <li>Stars: <a href="{{ repo.html_url }}/stargazers">{{ repo.stargazers_count }}</a></li>
            <li>Issues: <a href="{{ repo.html_url}}/issues">{{ repo.open_issues_count }}</a></li>
          </ul>
        </div>
      {% endfor %}
      </div>
    </section>
    <footer>
      Contact me {% if config.email %}via {{ config.email }} or {% endif %}on <a href="{{ user.html_url }}">GitHub</a>
    </footer>
